    <%= favicon_link_tag 'feather.png', :type => "image/png" %>
    
    <script type="text/javascript">
      window.API_OPTIONS = {
        intrinioApiId: "<%=ENV['INTRINIO_API_ID']%>",
        intrinioApiKey: "OjAyYTBjMzAzNjA2M2Q0OWYxM2Y3OTdhODAzYjJiZDE4",
        alphaVantageApiKey: "<%= ENV['ALPHAVANTAGE_API_KEY'] %>"
      };
    </script>
  </head>

  <body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
    <%= yield %>
  </body>
</html>
