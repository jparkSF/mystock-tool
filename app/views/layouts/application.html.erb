<!DOCTYPE html>
<html>
  <head>
    <title>StockOverflow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      <% if logged_in? %>
      	window.currentUser =
          <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      <% end %>
    </script>

    <%= favicon_link_tag 'feather.png', :type => "image/png" %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112423825-2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-112423825-2');
    </script>
    <script type="text/javascript">
      window.API_OPTIONS = {
        intrinioApiId: "<%=ENV['INTRINIO_API_ID']%>",
        intrinioApiKey: "<%= ENV['INTRINIO_API_KEY'] %>",
        alphaVantageApiKey: "<%= ENV['ALPHAVANTAGE_API_KEY'] %>"
      };
    </script>
  </head>

  <body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
    <%= yield %>
  </body>
</html>
